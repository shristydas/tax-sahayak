# Streamlit Cloud Secrets Configuration
# Copy this to your Streamlit Cloud app's secrets section

# LLM API Keys (add at least one)
OPENAI_API_KEY = "your_openai_api_key_here"
MISTRAL_API_KEY = "your_mistral_api_key_here"  
GOOGLE_API_KEY = "your_google_api_key_here"
GROK_API_KEY = "your_grok_api_key_here"

# API Base URLs (optional - uses defaults if not provided)
MISTRAL_BASE_URL = "https://api.mistral.ai/v1"
GROK_BASE_URL = "https://api.x.ai/v1"

# Search API Keys (optional - choose one for web search functionality)
SERPER_API_KEY = "your_serper_api_key_here"
GOOGLE_SEARCH_API_KEY = "your_google_search_api_key_here"
GOOGLE_CSE_ID = "your_google_cse_id_here"

# Application Settings (optional)
DEBUG = false
DATA_PATH = "./data"
MAX_TOKENS = 4000
TEMPERATURE = 0.7